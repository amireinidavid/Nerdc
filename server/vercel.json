{
  "version": 2,
  "builds": [
    {
      "src": "server.ts",
      "use": "@vercel/node",
      "config": {
        "installCommand": "npm install --force && npx prisma generate",
        "buildCommand": "npx prisma generate && tsc"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "server.ts",
      "headers": {
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Allow-Origin": "${CLIENT_URL}",
        "Access-Control-Allow-Methods": "GET,OPTIONS,PATCH,DELETE,POST,PUT",
        "Access-Control-Allow-Headers": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization, Cookie",
        "Access-Control-Expose-Headers": "Set-Cookie, Access-Token, Refresh-Token"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "COOKIE_DOMAIN": ""
  }
} 